 //write a program to print and find sum of  number  by using function call
 #include <stdio.h>
 int sum(int n){
   for(int i =1;i<=n;i++){
      printf("%d\n",i);
   }
      printf("if you want to find sum press 1 else 0:");
      int choice;
      scanf("%d",&choice);
      if(choice == 1){
         int sum = 0;
         for(int j=1;j<=n;j++){
            sum =sum + j;
         }
         printf("Sum is %d\n",sum);
         
      }
      else if(choice!=0){
         printf("Thank you\n");
   }



 }
 int main(){
  
   int n;
    printf("Enter a number to print form 1 to n:");
   scanf("%d",&n);
   sum(n);


   return 0;
 }